@if (Show)
{
    <div class="my-modal">
        <div class="my-modal-content">
           
            <span @onclick="OnCancel" class="close">&times;</span>
            <p>@FilePath</p>
            <img class="my-image" src="@FilePath" />

            <div class="my-modal__btns">
                <button @onclick="OnCancel" type="button" class="my-modal__cancel">
                    Zamknij
                </button>
            </div>
        </div>
    </div>
}